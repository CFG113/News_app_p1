<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Include the image-only layout -->
    <ImageView
        android:id="@+id/imageTopStory"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <!-- Title next to the image -->
    <TextView
        android:id="@+id/textRelatedTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Related Story Title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/imageTopStory"
        app:layout_constraintStart_toEndOf="@id/imageTopStory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/imageTopStory" />

</androidx.constraintlayout.widget.ConstraintLayout>
